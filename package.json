{
  "name": "aiscribe",
  "displayName": "AiScribe",
  "description": "A powered AI extension for automatic documentation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiscribe-sidebar-view",
          "title": "AiScribe",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "aiscribe-sidebar-view": [
        {
          "type": "webview",
          "id": "aiscribe-sidebar",
          "name": "AiScribe",
          "icon": "media/icon.svg",
          "contextualTitle": "AiScribe"
        }
      ]
    },
    "commands": [
      {
        "command": "aiscribe.createDoc",
        "title": "AIScribe: Create documentation (TODO)"
      },
      {
        "command": "aiscribe.activate",
        "title": "AIScribe: Activate (TODO)"
      },
      {
        "command": "aiscribe.makePrompt",
        "title": "AIScribe: Make prompt (TODO)"
      },
      {
        "command": "aiscribe.translateToStakeholder",
        "title": "AIScribe: Translate (TODO)"
      },
      {
        "command": "aiscribe.summarizeSelectedText",
        "title": "AIScribe: Summarize (TODO)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@tsconfig/svelte": "^5.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "rollup-plugin-svelte": "^7.1.6",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.1",
    "svelte-preprocess": "^5.0.4",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "rollup": "^3.29.1"
  }
}
